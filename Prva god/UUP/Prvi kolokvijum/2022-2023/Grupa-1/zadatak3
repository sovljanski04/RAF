#include <stdio.h>

int main(){
    int n=8;
    char c = 'A' + n -1;
    int x=0;
    int y=0;
    for (int i=0;i<n;i++){
        if (i==n-1){
            c = c+32;
        }
        for (int j=0;j<n;j++){
            if (j==n-1 && c<'a'){
                c=c+32;

            }

            putchar(c);
            if (j==n-1 ){
                c=c-32;

            }
            if (y<x){
                c--;
                y++;
            }
            printf(" ");

        }
        for (int j=0;j<n-1;j++){
            if (j == n-y-1){
                c++;
                y--;
            }

            putchar(c);
            printf(" ");
        }
        printf("\n");
        x++;
        c = 'A' + n -1;
    }
    x=x-2;
    for (int i=0;i<n-1;i++){

        for (int j=0;j<n;j++){

            if (j==n-1){
                c=c+32;
            }
            putchar(c);
            if (y<x){
                c = c-1;
                y++;
            }
            if (j==n-1){
                c=c-32;
            }

            printf(" ");

        }
        y=x;
        for (int j=0;j<n-1;j++){
            if (j==n-y-1){
                c++;
                y--;
            }
            putchar(c);
            printf(" ");
        }
        y=0;
        x--;
        printf("\n");
        c = 'A' + n -1;
    }

    return 0;
}
