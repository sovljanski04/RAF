#include <stdio.h>

int main() {
    int n;
    scanf("%d",&n);
    for (int i=0;i<n-1;i++){
        printf(".");
    }
    printf("^");
        for (int i=0;i<n-1;i++){
        printf(".");
    }
    printf("\n");
    int x=n-2;
    int brz=0;
    for (int i=1;i<n-1;i++){
        for(int j=0;j<x;j++){
            printf(".");
        }
        printf("/");
        for (int j=0;j<(2*n-1)-2*x-2;j++){
            if (i==(n-1)/2){
                brz++;
            }
            printf("*");
        }
        printf("\\");
                for(int j=0;j<x;j++){
            printf(".");
        }
        printf("\n");
        x--;
    }
    for (int i=0;i<((n*2-1)-brz)/2;i++){
        printf("-");
    }
    for (int i=0;i<brz;i++){
        printf("*");
    }
        for (int i=0;i<((n*2-1)-brz)/2;i++){
        printf("-");
    }
    printf("\n");
    for (int i=0;i<n-2;i++){
            for (int i=0;i<((n*2-1)-brz)/2-1;i++){
        printf(".");
    }
    printf("|");
    for (int i=0;i<brz;i++){
        printf("*");
    }
    printf("|");
            for (int i=0;i<((n*2-1)-brz)/2-1;i++){
        printf(".");
    }
        printf("\n");
    }
        for (int i=0;i<((n*2-1)-brz)/2;i++){
        printf(".");
    }
    for (int i=0;i<brz;i++){
        printf("-");
    }
        for (int i=0;i<((n*2-1)-brz)/2;i++){
        printf(".");
    }
   
    return 0;
}
