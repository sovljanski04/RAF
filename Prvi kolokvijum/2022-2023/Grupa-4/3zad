#include <stdio.h>

void printSign(char c, int n){
    for (int i=0;i<n;i++){
        putchar(c);
    }
}

int main() {
    int n;
    scanf("%d",&n);
    
    //first row
    printSign('.',n-1);
    printf("^");
    printSign('.',n-1);
    printf("\n");

    int x=n-2;
    int sred=0;
    int sirina=n*2-1;
    for (int i=0;i<n-2;i++){
        printSign('.',x);
        printf("/");
        for (int j=0;j<(2*n-1)-2*x-2;j++){
            if (i==(n-1)/2-1){
                sred++;
            }
            printf("*");
        }
        printf("\\");
        printSign('.',x);
        printf("\n");
        x--;
    }
    printSign('-',((sirina)-sred)/2);
    printSign('*',sred);
    printSign('-',((sirina)-sred)/2);

    printf("\n");

    for (int i=0;i<n-2;i++){
        printSign('.',((sirina)-sred)/2-1);

    printf("|");
        printSign('*',sred);
    printf("|");
        printSign('.',((sirina)-sred)/2-1);
        printf("\n");
    }
    
    printSign('.',((sirina)-sred)/2);
    printSign('-',sred);
    printSign('.',((sirina)-sred)/2);
    
    return 0;
}
